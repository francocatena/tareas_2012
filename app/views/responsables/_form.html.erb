<%= form_for(@responsable) do |f| %>
  <% if @responsable.errors.any? %>
    <div id="error_explanation">
      <h2>Ups, hay algunos errores que deber√≠as ver:</h2>

      <ul>
      <% @responsable.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit @responsable.new_record? ? 'Crear Responsable' : 'Actualizar Responsable' %>
  </div>
<% end %>
