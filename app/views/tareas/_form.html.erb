<%= simple_form_for(@tarea) do |f| %>
  <%= f.error_notification %>

  <%= f.input :nombre %>
  <%= f.input :fecha %>
  <%= show_tarea_responsable_select(f) %>
  <%= f.input :detalles, input_html: { rows: 5 } %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
