<tr <%= raw 'class="strike"' if tarea.completa %>>
  <td><%= link_to tarea.nombre, tarea %></td>
  <td><%= tarea.fecha ? l(tarea.fecha) : '-' %></td>
  <td><%= tarea.responsable || '-' %></td>
  <td>
    <%= link_to(
      t('.completa'), completa_tarea_path(tarea, format: :html),
      method: :put, data: { 'remote' => true, 'completar-tarea' => true }
    ) unless tarea.completa %>
  </td>
</tr>
