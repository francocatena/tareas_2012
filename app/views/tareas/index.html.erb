<table class="table table-bordered table-striped table-condensed">
  <caption>
    <br />
    <h2>Listado de tareas</h2>
    <br />
  </caption>
  <tr>
    <th>Nombre</th>
    <th>Fecha</th>
    <th>Responsable</th>
  </tr>
  <% @tareas.each do |tarea| %>
    <tr>
      <td><%= link_to tarea.nombre, tarea %></td>
      <td><%= tarea.fecha || '-' %></td>
      <td><%= tarea.responsable || '-' %></td>
    </tr>
  <% end %>
</table>

<br />

<%= will_paginate @tareas %>

<nav>
  <%= link_to 'Nueva tarea', new_tarea_path, class: 'btn btn-primary' %>
</nav>
